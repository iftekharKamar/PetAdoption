<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/show.css">
    <title>Document</title>
</head>
<body>
    <header>
        <div class="navbar">
            <div class="logo">
                <h1>Pet Adoption</h1>
            </div>
            <nav>
                <ul>
                    <li><a href="/home">Home</a></li>
                    <li><a href="/home/about_us">About Us</a></li>
                    <li><a href="/home/contact_us">Contact Us</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="outer">
        <%for(let li of allListings){%>
            <% if (li.title==name) { %>
                <div class="inner">
                <img src=<%= li.img %> alt="">
                    <h3><%= li.name %></h3>
                    <form action="/home/show<%= name %>/<%= li._id %>">
                    <button>Show details</button></form>
                </div>
            <% } %>
       <%  } %>
    </div>
</body>
</html>